@using TMS.Web.Client.Models
@model Device
@{
    ViewBag.Title = "Device List";
}
<div class="c-header">
    <h2>@*Device List*@</h2>
</div>
<div class="card">
    <div class="card-header">
        <h2><a href="" data-ma-action="submenu-toggle"><i class="zmdi zmdi-view-compact"></i>&nbsp; <b>Devices</b></a></h2>
    </div>
    <div class="table-responsive">
        <table id="data-table-basic" class="table table-striped">
            <thead>
                <tr>
                    <th data-column-id="Name"><b>Device Name</b></th>
                    <th data-column-id="Location"><b>Location</b></th>
                    <th data-column-id="Status" data-order="asc"><b>Status</b></th>
                    <th data-column-id="Remarks" data-order="desc"><b>Remarks</b></th>
                </tr>
            </thead>
            <tbody>
                @foreach (Device device in ViewBag.Devices)
                {
                    <tr>
                        <td>@device.Name</td>
                        <td>@device.Location</td>
                        <td>@device.Status</td>
                        <td>@device.Remarks</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        //Basic Example
        $("#data-table-basic").bootgrid({
            css: {
                icon: 'zmdi icon',
                iconColumns: 'zmdi-view-module',
                iconDown: 'zmdi-expand-more',
                iconRefresh: 'zmdi-refresh',
                iconUp: 'zmdi-expand-less'
            },
        });
    });
</script>